<%- model_class = Exam -%>
  <div class="col-xs-12 col-sm-8 col-md-4">
    <div class="page-header">
      <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
    </div>
    <dl class="dl-horizontal" style="font-size:20px;">
      <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
      <dd><%= @exam.title %></dd>
      <dt><strong><%= model_class.human_attribute_name(:mock_id) %>:</strong></dt>
      <dd><%= @exam.mock.title %></dd>
    </dl>
    
    <%= link_to t('.back', :default => t("helpers.links.back")),
                  mock_path(@exam.mock), :class => 'btn btn-default'  %>
    <%= link_to t('.edit', :default => t("helpers.links.edit")),
                  edit_exam_path(@exam), :class => 'btn btn-default' %>
    <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                  exam_path(@exam),
                  :method => 'delete',
                  :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                  :class => 'btn btn-danger' %>
  </div>
  <div class="col-xs-12 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <div class="text-center">Questões</div>
      </div>
      <div class="panel-body panel-lg">
        <% @exam.questions.order("number ASC").in_groups_of(6, false) do |group| %>
          <div class='btn-group btn-group-justified'>
            <% group.each do |helper| %>
              <% if helper.id %>
                <%= link_to helper.number, question_path(helper), :class => 'btn btn-default', :role =>'button'  %>
              <% end %>
            <% end %>
          </div>
        <% end %>
      </div>
      <div class="panel-footer panel-lg">
        <h2 class="text-center">Adicionar questão</h2>
        <%= form_for([@exam, @exam.questions.build]) do |f| %>
          <table class="table">
            <tr>
              <td><%= f.label :number %></td>
              <td><%= f.number_field :number, :class => 'form-control', :placeholder => "Nº" %></td>
            </tr>
            <tr>
              <td><%= f.label :question_type_id, "Tipo de Questão" %></td>
              <td><%= f.select :question_type_id, options_for_select(QuestionType.all.map{ |i| [i.title, i.id]}), :class => 'form-control' %></td>
            </tr>
            <tr>
              <td><%= f.label :veracity, "Avaliar como Verdadeira?" %></td>
              <td><%= f.check_box :veracity %></td>
            </tr>
            <tr>
              <td><%= f.label :title, "Título" %></td>
              <td><%= f.cktext_area :title %></td>
            </tr>
          </table>
          <%= f.submit :class => 'btn btn-default' %>
        <% end %>
      </div>
    </div>
  </div>
</div>