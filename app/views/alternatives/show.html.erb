<%- model_class = Alternative -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @alternative.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:veracity) %>:</strong></dt>
  <dd><%= @alternative.veracity %></dd>
  <dt><strong><%= model_class.human_attribute_name(:question_id) %>:</strong></dt>
  <dd><%= @alternative.question_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              alternatives_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_alternative_path(@alternative), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              alternative_path(@alternative),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
