<%- model_class = Question -%>
  <div class="col-xs-12 col-sm-6">
    <div class="panel panel-warning">
      <div class="panel-body">
        <dl class="dl-horizontal">
          <dt><strong><%=t '.title', :default => model_class.model_name.human.titleize %>:</strong></dt>
          <dd><%= @question.number %></dd>
          <dt><strong><%= model_class.human_attribute_name(:question_type) %>:</strong></dt>
          <dd><%= @question.question_type.title %></dd>
          <dt><strong><%= model_class.human_attribute_name(:veracity) %>:</strong></dt>
          <dd><%= @question.veracity %></dd>
          <dt><strong><%= model_class.human_attribute_name(:exam_id) %>:</strong></dt>
          <dd><%= @question.exam.title %></dd>
        </dl>
      </div>
      <div class="panel-footer">
        <%= link_to t('.back', :default => t("helpers.links.back")), exam_path(@question.exam), :class => 'btn btn-default'  %>
        <%= link_to t('.edit', :default => t("helpers.links.edit")), edit_question_path(@question), :class => 'btn btn-warning' %>
        <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              question_path(@question),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
      </div>
    </div>
    
    <div class="panel panel-info">
      <div class="panel-heading">
        <div class="text-center">Adicionar cabeçalho da questão:</div>
      </div>
      <div class="panel-body panel-lg">
        <%= form_for([@question, @question.helper_objects.build]) do |f| %>
          <p>
            <%= f.label :title, :class => 'control-label' %><br>
            <%= f.text_field :title, :class => 'form-control' %>
          </p>
          <p>
            <%= f.label :text, :class => 'control-label' %><br>
            <%= f.text_area :text, :class => 'form-control', :rows => 6 %>
          </p>
          <p>
            <%= f.label :image, :class => 'control-label' %><br>
            <%= f.file_field :image %>
          </p>
          <p>
            <%= f.label :font, :class => 'control-label' %><br>
            <%= f.text_field :font, :class => 'form-control' %>
          </p>
          <p>
            <%= f.submit :class => 'btn btn-info' %>
          </p>
        <% end %>
      </div>
    </div>  
    
    <div class="panel panel-info">
      <div class="panel-heading">
        <div class="text-center">Adicionar Alternativa</div>
      </div>
      <div class="panel-body panel-lg">
        <%= form_for([@question, @question.alternatives.build]) do |f| %>
          <p>
            <%= f.label :title, :class => 'control-label' %><br>
            <%= f.cktext_area :title, :class => 'form-control' %>
            <%= f.check_box :veracity %>
            <%= f.label :veracity,"verdadeira?" %>
          </p>
          <p>
            <%= f.label :image, :class => 'control-label' %><br>
            <%= f.file_field :image %>
          </p>
          <p>
            <%= f.submit :class => 'btn btn-info' %>
          </p>
        <% end %>
      </div>
    </div>
  </div>
  
  <div class="col-xs-12 col-sm-6">
    
    <h2>Cabeçalho</h2>
    <div class="panel panel-info">
      <div class="panel-body">
        <%= raw(@question.title) %>
        <% @question.helper_objects.each do |helper| %>
          <% if helper.title %>
            <p><h2 class="text-center"><%= helper.title %></h2></p>
          <% end %>
           <% if helper.text %>
            <p><h4 class="text-justified"><%= helper.text %></h4></p>
          <% end %>
          <% if helper.image.present? %>
            <p><%= image_tag helper.image.url, :class => "img-responsive center-block" %></p>
          <% end %>
          <% unless helper.font.blank? %>
            <p class="text-center"><small><strong>Fonte: </strong><%= helper.font %></small></p>
          <% end %>
          <div class='text-right'>
            <%= link_to t('.edit', :default => t("helpers.links.edit")), edit_helper_object_path(helper), :class => 'btn btn-sm btn-warning'  if helper.id %>
            <%= link_to "delete", [@question, helper], :method  => :delete, :class => 'btn btn-sm btn-danger' if helper.id %>
          </div>

          <%# link_to 'Destroy', question_helper_object_path(@question.id, helper),
                    data: {:confirm => 'Are you sure?'}, :method => :delete %>
        <% end %>
      </div>
    </div>
    
    <h2>Alternativas</h2>
    <table class='table table-hover' style='background-color:white;'>
      <% @question.alternatives.each do |alternative| %>
        <% if alternative.id %>
          <tr>
            <td class="col-sm-10 col-lg-10">
              <% if alternative.title %>
                <%= raw(alternative.title) %>
              <% end %>
              <% if alternative.image.present? %>
                <%= image_tag alternative.image.url, :class => "img-responsive center-block" %>
              <% end %>
            </td>
            <td class="col-sm-1 col-lg-1"><%= alternative.veracity ? 'V' : 'F' %></td>
            <td class="col-sm-1 col-lg-1"><%= link_to "X", [@question, alternative], :method  => :delete, data: {confirm: t('helpers.confirmations.are_you_sure?')} , :class => 'btn btn-sm btn-danger' %></td>
          </tr>
        <% end %>
      <% end %>
      </table>
    </div>
  </div>




