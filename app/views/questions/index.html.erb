<%- model_class = Question -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human(count: 2) %></h1>
</div>

<%= search_form_for @q do |f| %>
  <div class = 'col-lg-2'>
    <%= f.label :number_eq %>
    <%= f.number_field :number_eq, :class => 'form-control mb-2 mr-sm-2 mb-sm-0' %>
  </div>
  <div class = 'col-lg-4'>
    <div class="form-check mb-2 mr-sm-2 mb-sm-0">
      <%= f.label :veracity_eq %>
      <div>
      <%= f.check_box_tag('q[veracity_in][]', true ) %><%= t("true") %>
      <%= f.check_box_tag('q[veracity_in][]', false ) %><%= t("false") %>
      </div>
    </div>
  </div>
  <div class = 'col-lg-4'>
    <%= f.label :exam_title_cont %>
    <%= f.search_field :exam_title_cont, :class => 'form-control mb-2 mr-sm-2 mb-sm-0' %>
  </div>
  <div class = 'col-lg-2'>
    <%= f.submit :class => 'btn btn-primary' %>
  </div>
<% end %>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= sort_link(@q, :id, model_class.human_attribute_name(:id)) %></th>
      <th><%= sort_link(@q, :number, model_class.human_attribute_name(:number)) %></th>
      <th><%= sort_link(@q, 'question_type_title', model_class.human_attribute_name(:question_type)) %></th>
      <th><%= sort_link(@q, :veracity, model_class.human_attribute_name(:veracity)) %></th>
      <th><%= sort_link(@q, 'exam_title', model_class.human_attribute_name(:exam_id)) %></th>
      <th><%= sort_link(@q, :created_at, model_class.human_attribute_name(:created_at)) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @questions.each do |question| %>
      <tr>
        <td><%= link_to question.id, question_path(question) %></td>
        <td><%= question.number %></td>
        <td><%= question.question_type.title if question.question_type %></td>
        <td><%= t(question.veracity.to_s) %></td>
        <td><%= question.exam.title if question.exam %></td>
        <td><%= question.created_at.strftime("%d/%m/%Y") %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_question_path(question), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      question_path(question),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_question_path,
            :class => 'btn btn-primary' %>
