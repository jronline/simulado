<%- model_class = Question -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human(count: 2) %></h1>
</div>

<%= search_form_for @q do |f| %>
  <div class = 'col-lg-2'>
    <%= f.label :number_eq %>
    <%= f.number_field :number_eq, :class => 'form-control mb-2 mr-sm-2 mb-sm-0' %>
  </div>
  <div class = 'col-lg-4'>
    <div class="form-check mb-2 mr-sm-2 mb-sm-0">
      <%= f.label :veracity_eq %>
      <div>
      <%= f.check_box_tag('q[veracity_in][]', true ) %><%= t("true") %>
      <%= f.check_box_tag('q[veracity_in][]', false ) %><%= t("false") %>
      </div>
    </div>
  </div>
  <div class = 'col-lg-4'>
    <%= f.label :exam_title_cont %>
    <%= f.search_field :exam_title_cont, :class => 'form-control mb-2 mr-sm-2 mb-sm-0' %>
  </div>
  <div class = 'col-lg-2'>
    <%= f.submit :class => 'btn btn-primary' %>
  </div>
<% end %>

<table class="table table-striped">
  <!--<thead>-->
  <!--  <tr>-->
  <!--    <th><%# sort_link(@q, :id, model_class.human_attribute_name(:id)) %></th>-->
  <!--    <th><%# sort_link(@q, :number, model_class.human_attribute_name(:number)) %></th>-->
  <!--    <th><%# sort_link(@q, 'question_type_title', model_class.human_attribute_name(:question_type)) %></th>-->
  <!--    <th><%# sort_link(@q, :veracity, model_class.human_attribute_name(:veracity)) %></th>-->
  <!--    <th><%# sort_link(@q, 'exam_title', model_class.human_attribute_name(:exam_id)) %></th>-->
  <!--    <th><%# sort_link(@q, :created_at, model_class.human_attribute_name(:created_at)) %></th>-->
  <!--    <th><%#t '.actions', :default => t("helpers.actions") %></th>-->
  <!--  </tr>-->
  <!--</thead>-->
  <tbody>
    <div class="col-sm-12">
        <br>
        <% @questions.each do |question| %>
          <div style="border:1px solid black; padding-bottom: 0.5cm;" class="col-sm-11"> <!-- corrigir essa borda -->
            <div id='question'>
              <div class="col-sm-11">
                <small class="pull-right"><%= question.exam.mock.title %></small>
                <h1><%= raw question.title %></h1>
              </div>
            </div>
            <div id='answers'>
              <% question.alternatives.each_with_index do |alternative, index | %>
                <div class='col-sm-1'>
                  <%= index + 1 %>
                </div>
                <div class='col-sm-11'>
                  <%= raw alternative.title %>
                </div>
              <% end %>
            </div>
          </div>
          <div class="col-sm-1">
                
                <%= link_to t('.edit', :default => t("helpers.links.edit")),
                            edit_question_path(question), :class => 'btn btn-default btn-xs' %>
                <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                            question_path(question),
                            :method => :delete,
                            :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                            :class => 'btn btn-xs btn-danger' %>
          </div>
           <%= content_tag :a, "Adicinar à", href: "#modal", class: 'btn btn-default', data: {toggle: 'modal'} %>
            <%= modal_dialog id: "modal",
               header: { show_close: true, dismiss: 'modal', title: 'Selecione' },
               body:   { content: (render partial: "add_question") },
               footer: { content: content_tag(:button, 'Save', class: 'btn') } 
            %>
        <% end %>
      </div>
      
    
  </tbody>
</table>


<%= link_to t('.new', :default => t("helpers.links.new")),
            new_question_path,
            :class => 'btn btn-primary' %>

<script type="text/javascript">
$(document).on("click", 'li', function() {
    $.ajax({
                 url: "/user_exam_questions/add_to", // Route to the Script Controller method
                type: "GET",
            dataType: "json",
                data: { user_exam_id: , question_id: }, // This goes to Controller in params hash, i.e. params[:file_name]
            complete: function() {},
             success: function() {
                         alert("Questão adicioada com sucesso!")
                      },
               error: function() {
                        alert("Ajax error!")
                      }
    });
});
</script>