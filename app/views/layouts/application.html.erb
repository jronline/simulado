<!DOCTYPE html>
<html>
	<head>
		<title>Simuladao 1.0 alfa</title><%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %><%= javascript_include_tag 'application', 'data-turbolinks-track' => true %><%= csrf_meta_tags %>
	</head>
	<body>
		<div class="container-fluid">
			<% if user_signed_in? %>
				<div id="wrapper" class="navbar-header">
					<nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
						<div class="navbar-header">
							<button class="navbar-toggle" data-target=".navbar-collapse" data-toggle="collapse" type="button">
								<span class="sr-only">Toggle navigation</span>
								<span class="icon-bar"></span>
								<span class="icon-bar"></span>
								<span class="icon-bar"></span>
							</button>
							<a class="navbar-brand" href="/">Painel Adminstrativo Simulados</a>
						</div>
						<ul class="nav navbar-top-links navbar-right pull-right" style="margin-right: 15px;">
					        Logged in as <strong><%= current_user.email %></strong>.
                            <%= link_to 'Edit profile', edit_user_registration_path, :class => 'navbar-link' %> |
                            <%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'navbar-link'  %>
						</ul>
					</nav>
				</div>
			<% else %>
				<!--<ul class="nav navbar-top-links navbar-right pull-right" style="margin-right: 15px;">-->
		            <%# link_to "Sign up", new_user_registration_path, :class => 'btn btn-default navbar-btn' %> 
		            <%# link_to "Login", new_user_session_path, :class => 'btn btn-default navbar-btn'  %>
	            <!--</ul>-->
	        <% end %>
			<%# if notice || alert %>
    		 <!--   <p class="notice alert alert-dismissable"><%# notice %></p>-->
    		 <!--   <p class="alert alert-dismissable"><%# alert %></p>-->
    		 <%# end %>
    		 
    		 <!--helper do bootstrap que retorna o alert com a cor correta-->
    		 <%= bootstrap_flash %>
			<%= yield %>
		</div>
	</body>
</html>
