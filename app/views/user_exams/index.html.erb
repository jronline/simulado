<%- model_class = UserExam -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:title) %></th>
      <th><%= model_class.human_attribute_name(:user_id) %></th>
      <th><%= model_class.human_attribute_name(:area_id) %></th>
      <th><%= model_class.human_attribute_name(:date_application) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @user_exams.each do |user_exam| %>
      <tr>
        <td><%= link_to user_exam.id, user_exam_path(user_exam) %></td>
        <td><%= user_exam.title %></td>
        <td><%= user_exam.user_id %></td>
        <td><%= user_exam.area_id %></td>
        <td><%= user_exam.date_application %></td>
        <td><%=l user_exam.created_at %></td>
        <td>
          <%= link_to edit_user_exam_path(user_exam), class: 'btn btn-default btn-xs' do %>
            <i class="glyphicon glyphicon-pencil"></i>
          <% end %>
          <%= link_to user_exam_path(user_exam),
                      method: :delete,
                      data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) },
                      class: 'btn btn-xs btn-default' do %>
            <i class="glyphicon glyphicon-remove-circle"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_user_exam_path,
            :class => 'btn btn-primary' %>
