<%- model_class = UserExam -%>
<div class="container-fluid">
  <div class="row">
    <nav class="col-sm-3 col-md-2 hidden-xs-down bg-faded sidebar">
        
        
    </nav>

    <main class="col-sm-9 offset-sm-3 col-md-10 offset-md-2 pt-3">
      <br>
      <div class="row text-right">
        <%= link_to user_exams_path, class: 'btn btn-xs btn-default' do %>
          <i class="glyphicon glyphicon-arrow-left"></i>
        <% end %>
        <%= link_to edit_user_exam_path(@user_exam), class: 'btn btn-xs btn-default' do %>
          <i class="glyphicon glyphicon-pencil"></i>
        <% end %>
        <%= link_to user_exam_path(@user_exam),
                    :method => 'delete',
                    :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                    :class => 'btn btn-xs btn-default' do %>
          <i class="glyphicon glyphicon-remove-circle"></i>
          <% end %>
                    
      </div>
      <div class="row text-center placeholders">
        <table class="table">
          <tr>
            <th class="small-column"><%= t('activerecord.models.user_exam.one') %>:</th>
            <th class="large-column"><%= @user_exam.title %></th>
          </tr>
          <tr>
            <th class="small-column"><%= t('activerecord.attributes.user_exam.user_id') %>:</th>
            <th class="large-column"><%= @user_exam.user.name %></th>
          </tr>
          <tr>
            <th class="small-column"><%= t('activerecord.attributes.user_exam.area_id') %>:</th>
            <th class="large-column"><%= @user_exam.area.title %></th>
          </tr>
          <tr>
            <th class="small-column"><%= t('activerecord.attributes.user_exam.date_application') %>:</th>
            <th class="large-column"><%= l @user_exam.date_application, format: :long %></th>
          </tr>
        </table>
      </div>

      <h3><%= t('activerecord.models.user_exam_question.others') %></h3>
      <% @user_exam.user_exam_questions.each do |user_exam_question| %>
        <div style="border:1px solid black;"> <!-- corrigir essa borda -->
          <div id='question'>
            <div class="col-sm-1">
              <h4 class='align-middle'><%= user_exam_question.order %></h4>
            </div>
            <div class="col-sm-11">
              <small class="pull-right"><%= user_exam_question.question.exam.mock.title %></small>
              <h1><%= raw user_exam_question.question.title %></h1>
            </div>
          </div>
          <div id='answers'>
            <% user_exam_question.question.alternatives.each_with_index do |alternative, index | %>
              <div class='col-sm-1'>
                <%= index + 1 %>
              </div>
              <div class='col-sm-11'>
                <%= raw alternative.title %>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
      
          <div class="panel panel-info">
      <div class="panel-heading">
        <div class="text-center">Adicionar Quest√£o</div>
      </div>
      <div class="panel-body panel-lg">
        <%= form_for([@user_exam, @user_exam.user_exam_questions.build]) do |f| %>
          <p>
            <%= f.label :order, :class => 'control-label' %><br>
            <%= f.number_field :order, :class => 'form-control' %>
          </p>
          <p>
            <%= f.label :rating, :class => 'control-label' %><br>
            <%= f.text_field :rating, :class => 'form-control' %>
          </p>
          <p>
            <%= f.label :question_id, :class => 'control-label' %><br>
            <%= f.select :question_id, options_for_select(Question.all.map{ |i| [i.number, i.id]}) %>
          </p>
          <p>
            <%= f.submit :class => 'btn btn-info' %>
          </p>
        <% end %>
      </div>
    </div>  
      
      
      
    </main>
  </div>
</div>

